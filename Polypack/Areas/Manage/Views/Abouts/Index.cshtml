@model IEnumerable<Polypack.Models.About>

@{
    ViewBag.Title = "Index";
}
<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8 mb-4">
    <div class="container-fluid">
        <div class="header-body">
            <!-- Card stats -->
            <div class="row">
                <div class="col-xl-12 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Haqqımızda bölməsi</h3>
                                </div>
                                <div class="col-4 text-right">
                                    <a href="@Url.Action("index","dashboard", new { Area="Manage" })" class="btn btn-sm btn-primary toback"><i class="ni ni-bold-left"></i>Geri Qayıt</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IconName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IconTitle)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IconSubtitle)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Answer)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IconName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IconTitle)
                                </td>
                                <td style="width: 25%">
                                    @Html.DisplayFor(modelItem => item.IconSubtitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Answer)
                                </td>
                                <td>
                                    <a href="@Url.Action("edit",new { id = item.Id })" class="btn btn-sm btn-info">Redaktə et</a>
                                </td>
                            </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
