@model Polypack.Models.Message
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}

<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8 mb-4">
        <div class="container-fluid">
            <div class="header-body">
                <!-- Card stats -->
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Mesajlar bölməsi</h3>
                                    </div>
                                    <div class="col-4 text-right">
                                        <a href="@Url.Action("index","message", new { Area="Manage" })" class="btn btn-sm btn-primary toback"><i class="ni ni-bold-left"></i>Geri Qayıt</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div>
                                    <dl class="dl-horizontal">
                                        <dt>
                                            Ad və Soyad
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FullName)
                                        </dd>

                                        <dt>
                                            E-poçt ünvanı
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Email)
                                        </dd>

                                        <dt>
                                            Başlıq
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Subject)
                                        </dd>

                                        <dt>
                                            Mesaj
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Text)
                                        </dd>

                                        <dt>
                                            Göndərilmə tarixi
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Date)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

