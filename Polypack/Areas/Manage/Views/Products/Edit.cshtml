@model Polypack.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}


<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8 mb-4">
    <div class="container-fluid">
        <div class="header-body">
            <!-- Card stats -->
            <div class="row">
                <div class="col-xl-12 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Məhsul Redaktə et</h3>
                                </div>
                                <div class="col-4 text-right">
                                    <a href="@Url.Action("index","products", new { Area="manage" })" class="btn btn-sm btn-primary toback"><i class="ni ni-bold-left"></i>Geri Qayıt</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="pl-lg-4">

                                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label for="#">Məhsul Adı</label>
                                        <div class="col-md-10">
                                            <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="#">Kateqoriya</label>
                                        <div class="col-md-10">
                                            <select class="form-control" name="CategoryId" required>
                                                <option selected value="@Model.CategoryId">@Model.Category.Name</option>
                                                @foreach (var category in ViewBag.CategoryId)
                                                {
                                                    <option value="@category.Id">@category.Name</option>
                                                }
                                            </select>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="SubCategoryId">Alt Kateqoriya</label>
                                        <div class="col-md-10">
                                            <select class="form-control" id="SubCategoryId" name="SubCategoryId" required>

                                                @if (Model.SubCategoryId == null)
                                                {
                                                    <option selected disabled value="">Bu məhsula dair alt kateqoriya yoxdur</option>
                                                }
                                                else
                                                {
                                                    <option selected value="@Model.SubCategory.Id">@Model.SubCategory.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-lg-6">
                                            <label for="#">Şəkil</label>
                                            <div class="col-md-10">
                                                <input type="file" name="Photo" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <img src="~/Uploads/@Model.Photo" width="200" />
                                            <input type="hidden" name="OldPicture" value="@Model.Photo" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="#">Qısa Məlumat</label>
                                        <div class="col-md-10">

                                            <textarea name="Desc" class="form-control" id="editor">@Model.Desc</textarea> 

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Yadda Saxla" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>