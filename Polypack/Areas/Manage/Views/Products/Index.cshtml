@model IEnumerable<Polypack.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
    string subname;
}

<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row">
                <div class="col">
                    <div class="card shadow">
                        <div class="card-header border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">Məhsullar</h3>
                                </div>
                                <div class="col-4 text-right">
                                    <a href="@Url.Action("create","products", new { Area = "manage"})" class="btn btn-sm btn-success"><i class="ni ni-fat-add"></i>Yenisini Yarat</a>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>
                                        <th>
                                            Şəkil
                                        </th>
                                        <th>
                                            Ad
                                        </th>
                                        <th>
                                            Kateqoriyası
                                        </th>
                                        <th>
                                            Alt Kateqoriyası
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <img src="~/Uploads/@item.Photo" width="100" />
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Category.Name
                                        </td>

                                        <td>
                                            @if(item.SubCategoryId == null)
                                            {
                                                <span class="badge badge-danger">Alt Kateqoriya yoxdur</span>
                                            }else { 
                                                @item.SubCategory.Name
                                            }
                                        </td>


                                            <td>
                                                <a href="@Url.Action("edit",new { id = item.Id })" class="btn btn-sm btn-info">Redaktə Et</a>
                                                <a onclick="return confirm('Bu məhsulu silmək istədiyinizə əminsiniz?')" href="@Url.Action("delete",new { id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer py-4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


