@{ 
    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>Baku Polymer - Control Panel</title>
    <!-- Favicon -->
    <link href="~/Areas/Manage/Assets/img/brand/favicon.png" rel="icon" type="image/png">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,500i,700,700i,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <!-- Icons -->
    <link href="~/Areas/Manage/Assets/vendor/nucleo/css/nucleo.css" rel="stylesheet">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.css" rel="stylesheet">
    

    <!-- Argon CSS -->
    <link type="text/css" href="~/Areas/Manage/Assets/css/argon.css?v=1.0.0" rel="stylesheet">
    <script src="https://kit.fontawesome.com/49b310bf46.js"></script>

</head>
<body>
    <!-- Sidenav -->
    <nav class="navbar navbar-vertical fixed-left navbar-expand-md navbar-light bg-white" id="sidenav-main">
        <div class="container-fluid">
            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Brand -->
            <a class="navbar-brand pt-0" href="@Url.Action("index","dashboard", new { Area="manage" })l">
                @*<img src="~/Areas/Manage/Assets/img/brand/blue.png" class="navbar-brand-img" alt="...">*@
            </a>
            <!-- User -->
            <ul class="nav align-items-center d-md-none">
                <li class="nav-item dropdown">
                    <a class="nav-link nav-link-icon" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="ni ni-bell-55"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right" aria-labelledby="navbar-default_dropdown_1">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="media align-items-center">
                            <span class="avatar avatar-sm rounded-circle">
                                <img alt="Image placeholder" src="~/Areas/Manage/Assets/img/theme/team-1-800x800.jpg">
                            </span>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                        <div class=" dropdown-header noti-title">
                            <h6 class="text-overflow m-0">Welcome!</h6>
                        </div>
                        <a class="dropdown-item">
                            <i class="ni ni-single-02"></i>
                            <span>My profile</span>
                        </a>
                        <a class="dropdown-item">
                            <i class="ni ni-settings-gear-65"></i>
                            <span>Settings</span>
                        </a>
                        <a class="dropdown-item">
                            <i class="ni ni-calendar-grid-58"></i>
                            <span>Activity</span>
                        </a>
                        <a class="dropdown-item">
                            <i class="ni ni-support-16"></i>
                            <span>Support</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item btn btn-primary btn-md" href="@Url.Action("logout", "dashboard")" type="button">
                            <i class="ni ni-user-run"></i>
                            <span>Çıxış</span>
                        </a>
                    </div>
                </li>
            </ul>
            <!-- Collapse -->
            <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                <!-- Collapse header -->
                <div class="navbar-collapse-header d-md-none">
                    <div class="row">
                        <div class="col-6 collapse-brand">
                            <a href="@Url.Action("index","dashboard", new { Area="manage" })">
                                <img src="~/Areas/Manage/Assets/img/brand/blue.png">
                            </a>
                        </div>
                        <div class="col-6 collapse-close">
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                                <span></span>
                                <span></span>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Form -->
                <form class="mt-4 mb-3 d-md-none">
                    <div class="input-group input-group-rounded input-group-merge">
                        <input type="search" class="form-control form-control-rounded form-control-prepended" placeholder="Search" aria-label="Search">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <span class="fa fa-search"></span>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- Navigation -->
                <ul class="navbar-nav">
                    <li class="nav-item @(controllerName=="dashboard"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="dashboard"?"active_a":"")" href="@Url.Action("index","dashboard", new { Area="manage" })">
                            <i class="ni ni-tv-2 @(controllerName=="dashboard"?"active_i":"")" style="color: #5603ad"></i> Ana Səhifə
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="headers"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="headers"?"active_a":"")" href="@Url.Action("index","headers")">
                            <i class="ni ni-album-2 @(controllerName=="headers"?"active_i":"")" style="color: #212529"></i> Üz qapağı
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="abouts"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="abouts"?"active_a":"")" href="@Url.Action("index","abouts", new { Area="manage" })">
                            <i class="ni ni-briefcase-24 @(controllerName=="abouts"?"active_i":"")" style="color: #ff6a00"></i> Haqqımızda
                        </a>
                    </li>
                    <li class="nav-item accordion @(controllerName=="categories"?"active_nav":"")" id="accordionExample">
                        <a class="nav-link @(controllerName=="categories"?"active_a":"")" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <i class="ni ni-box-2 @(controllerName=="categories"?"active_i":"")" style="color: #000000 !important"></i>Kateqoriyalar
                        </a>
                        <ul id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <li><a href="@Url.Action("index","categories",new { Area ="manage"})">Üst Kateqoriyalar</a></li>
                            <li><a href="@Url.Action("index","subcategory",new { Area ="manage"})">Alt Kateqoriyalar</a></li>
                        </ul>
                    </li>

                    <li class="nav-item @(controllerName=="products"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="products"?"active_a":"")" href="@Url.Action("index","products", new { Area="manage" })">
                            <i class="ni ni-cart @(controllerName=="products"?"active_i":"")" style="color: #ff006e"></i> Məhsullar
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="weprovides"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="weprovides"?"active_a":"")" href="@Url.Action("index","weprovides", new { Area="manage" })">
                            <i class="ni ni-cart @(controllerName=="weprovides"?"active_i":"")" style="color: #ff6a00"></i> Biz təmin edirik
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="banners"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="banners"?"active_a":"")" href="@Url.Action("index","banners", new { Area="manage" })">
                            <i class="ni ni-cart @(controllerName=="banners"?"active_i":"")" style="color: #000000"></i> Gördüyümüz işlər
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="services"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="services"?"active_a":"")" href="@Url.Action("index","services",new { Area="manage" })">
                            <i class="ni ni-world @(controllerName=="services"?"active_i":"")" style="color: #5603ad"></i> Xidmətlərimiz
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="partners"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="partners"?"active_a":"")" href="@Url.Action("index","partners",new { Area="manage" })">
                            <i class="ni ni-building @(controllerName=="partners"?"active_i":"")" style="color: #621515"></i> Tərəfdaşlar
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="contacts"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="contacts"?"active_a":"")" href="@Url.Action("index","contacts",new { Area="manage" })">
                            <i class="ni ni-building @(controllerName=="contacts"?"active_i":"")" style="color: #2c5c46"></i>Tənzimləmələr
                        </a>
                    </li>
                    <li class="nav-item @(controllerName=="message"?"active_nav":"")">
                        <a class="nav-link @(controllerName=="message"?"active_a":"")" href="@Url.Action("index","message",new { Area="manage" })">
                            <i class="ni ni-email-83 @(controllerName=="message"?"active_i":"")" style="color: #3f21a1"></i> Mesajlar
                        </a>
                    </li>
                </ul>

                <a href="@Url.Action("logout", "dashboard")" type="button" class="btn btn-primary btn-md mt-4">Çıxış</a>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="h4 mb-0 text-white text-uppercase d-none d-lg-inline-block" )">@controllerName</a>
                <!-- Form -->
                <form class="navbar-search navbar-search-dark form-inline mr-3 d-none d-md-flex ml-lg-auto">
                    <div class="form-group mb-0">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                            </div>
                            <input class="form-control" placeholder="Search" type="text">
                        </div>
                    </div>
                </form>
                <!-- User -->
            </div>
        </nav>
        @RenderBody()
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/Areas/Manage/Assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/Areas/Manage/Assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optional JS -->
    <script src="~/Areas/Manage/Assets/vendor/chart.js/dist/Chart.min.js"></script>
    <script src="~/Areas/Manage/Assets/vendor/chart.js/dist/Chart.extension.js"></script>

    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script>

    <!-- Argon JS -->
    <script src="~/Areas/Manage/Assets/js/argon.js?v=1.0.0"></script>
    <script src="~/Areas/Manage/Assets/js/manage.js"></script>
    <script src="~/Areas/Manage/Assets/bundles/libscripts.bundle.js"></script>
    <script src="~/Areas/Manage/Assets/bundles/vendorscripts.bundle.js"></script>
    <script src="~/Areas/Manage/Assets/js/myscript.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/15.0.0/classic/ckeditor.js"></script>
    <script> ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });</script>


</body>
</html>