@model Polypack.Models.WeProvide

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout1.cshtml";
}
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8 mb-4">
        <div class="container-fluid">
            <div class="header-body">
                <!-- Card stats -->
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Təmin Edirik bölməsi</h3>
                                    </div>
                                    <div class="col-4 text-right">
                                        <a href="@Url.Action("index","weprovides", new { Area="manage" })" class="btn btn-sm btn-primary toback"><i class="ni ni-bold-left"></i>Geri Qayıt</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">

                                <div class="pl-lg-4">

                                    <form method="post" action="@Url.Action("edit","weprovides",new {Area="manage" })" enctype="multipart/form-data">
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                         
                                                <input type="hidden" name="Id" value="@Model.Id" />

                                            <div class="form-group">
                     
                                                <label class="control-label col-md-2" >Mətn</label>
                                                <div class="col-md-10">
                                                    <textarea id="summernote" class="form-control" name="TextSection">@Model.TextSection</textarea> 
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                                                    @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Yadda Saxla" class="btn btn-default" />
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                    <div>
                                        @Html.ActionLink("Geriyə qayıt", "Index")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


